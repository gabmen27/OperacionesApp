<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OperacionesApp.Pages.AreaCirculo"
             Title="AreaCirculo">
    <VerticalStackLayout Padding="5" Margin="5">
        <Label 
            Text="Calculemos el area del circulo!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label
            Text="Ingrese el Radio del cirulo"
            Margin="20"
            FontSize="Large"/>
        <Entry
            Margin="20"
            Placeholder="Ingrese el Dato aqui"
            Keyboard="Numeric"
            x:Name="txtRadio"/>
        <Label
           Text="Resultado :"
           Margin="20"
           FontSize="Body"
        />
        
        <Entry
           IsReadOnly="True"
            Margin="20"/>
        <Button
            Text="CALCULAR"
            Margin="20"
            x:Name="CalcularAreaCirculo"
            Clicked="CalcularAreaCirculo_Clicked"/>
    </VerticalStackLayout>
</ContentPage>